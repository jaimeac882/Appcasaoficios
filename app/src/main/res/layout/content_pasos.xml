<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cbPicView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sin_fon1"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/cbPicView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sin_fon2"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/cbPicView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sin_fon3"
        android:layout_weight="1"
        />

        <Button
            android:id="@+id/boton_conr"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/com_facebook_blue"
            android:text="@string/accion_continu"
            android:textColor="@android:color/white" />

    </LinearLayout>



</LinearLayout>