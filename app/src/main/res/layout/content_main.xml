<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/content_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.casaoficios.appcasaoficios.MenuPrincipalActivity"
    tools:showIn="@layout/app_bar_main">




    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/linearlayoutcontent"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="¿ Necesita Asistencia o Reparación dentro de su Casa o Departamento ?"
        android:textAlignment="center"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/linearlayoutcontent"
        android:textColor="#2230f4" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Registre su averia en Lima , para poder ayudarlo en el proceso de asistencia y reparación de su hogar o departamento .
\n\nAdemas lo contactaremos de manera rapida y segura con especialistas en Carpinteria , Fontaneria  , Electricistas que podran ayudarlo y asistirlo en todo momento."
            android:ems="9"
            android:backgroundTint="#ffffff"
            android:id="@+id/editText"
            android:textSize="15dp"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#1f8df3" />


        <TextView
            android:id="@+id/txtulltimaaveria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="9"
            android:focusable="false"
            android:text=""
            android:textAlignment="center"
            android:textColor="#b45800"
            android:textSize="15dp" />


        <Button
                android:id="@+id/boton_aceptar"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="70dp"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/com_facebook_blue"
                android:text="@string/accion_averia"
                android:textColor="@android:color/white" />



    </LinearLayout>
</RelativeLayout>