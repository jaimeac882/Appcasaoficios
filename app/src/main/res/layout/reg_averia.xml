    <LinearLayout
        android:id="@+id/area_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/areaAveria"
        android:orientation="vertical">




        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">






            <EditText
                android:id="@+id/txtaveria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:hint="Escriba el detalle de su averia"
                android:text=" Averia en el cuarto piso de mi departamento , el problema es con la tuberia de una matriz en los baños de mis inquilinos, Averia en el cuarto piso de mi departamento , el problema es con la tuberia de una matriz en los baños de mis inquilinos"
                android:inputType="textMultiLine"
                android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>





    <LinearLayout
        android:id="@+id/area_xys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_txt2"

        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Prioridad : "

            android:inputType="text"
            />


        <Button

            android:id="@+id/btnurge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Urgente" />



        <Button

            android:id="@+id/btnmedi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mañana"

            android:gravity="center"
            />


        <Button

            android:id="@+id/btnbaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En Semana"
            android:gravity="center"

            android:layout_centerHorizontal="true"
           />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/adjbi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/area_xys"
        android:orientation="vertical">

            <Button
                android:id="@+id/btnadd"
                android:layout_width="188dp"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:text="Adjuntar Imagenes"
                android:ems="10"

                android:inputType="textEmailAddress" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/linlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lstlistx"
            android:layout_width="match_parent"
            android:layout_height="116dp" />
        </LinearLayout>

</ScrollView>


    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/xxcon2"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:backgroundTint="@color/com_facebook_blue"
            android:text="@string/accion_siguiente"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btn_sig_con2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:backgroundTint="@color/com_facebook_blue"
            android:text="@string/accion_siguiente"
            android:textColor="@android:color/white" />


